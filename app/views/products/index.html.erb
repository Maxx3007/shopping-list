<div class="home-page">


<p id="notice"><%= notice %></p>

<p>These are the items that we need to buy:</p>





  <table style="width: 100%;" >
    <tbody>

        <% @products.each do |product| %>
                  <tr>
                    <td><p><strong><%= product.name %></strong></p> </td>
                    <td><%= product.quantity_needed %></td>
                    <td><%= product.quantity_available %></td>
                    <td><%= product.category %></td>
                    <td><%= link_to 'Show', product, :class => "btn btn-primary"  %>
                    <%= link_to 'Edit', edit_product_path(product), :class => "btn btn-primary" %>
                    <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary" %></td>
                  </tr>

        <% end %>
    </tbody>
  </table>



<br>

<p><%= link_to 'Add a New Product to the Database!', new_product_path, :class => "btn btn-primary btn-lg" %></p>

</div>
